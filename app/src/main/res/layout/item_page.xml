<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:scaleType="centerInside"
        android:src="@drawable/slider1"
        android:layout_above="@id/slide1_heading"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/slide1_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/slide1_desc"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:text="@string/slide1_heading"
        android:textColor="@color/black"
        android:layout_marginHorizontal="25dp"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/slide1_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="2dp"
        android:fontFamily="@font/nunito_light"
        android:gravity="center"
        android:paddingHorizontal="56dp"
        android:layout_alignParentBottom="true"
        android:text="@string/slide1_decs"
        android:textColor="#454343"
        android:textSize="16sp" />

</RelativeLayout>